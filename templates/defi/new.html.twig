{% extends 'base.html.twig' %}

{% block title %}Nouveau défi{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1 class="mb-3">Créer un nouveau défi</h1>

        {{ form_start(form) }}
            {{ form_row(form.titre) }}
            {{ form_row(form.description) }}
            {{ form_row(form.difficulte) }}
            {{ form_row(form.duree) }}

            <button class="btn btn-primary mt-3">Enregistrer</button>
        {{ form_end(form) }}
    </div>
{% endblock %}

